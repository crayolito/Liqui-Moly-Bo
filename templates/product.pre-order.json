        "contact_details": {
          "type": "contact_details",
          "settings": {
            "heading": "...or just ask an expert!",
            "image": "",
            "video_chat_link": "#",
            "chat_link": "#",
            "email": "example@example.com",
            "phone_number": "+55 555-12345",
