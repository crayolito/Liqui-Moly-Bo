            "show_bottom_divider": false
          }
        },
        "description": {
          "type": "description",
          "settings": {
            "title": "Description",
            "icon": "info",
            "expanded": true
          }
        },
        "details": {
          "type": "details",
          "settings": {
            "title": "Helpful documents",
            "icon": "document",
            "position": "left",
            "expanded": false,
            "show_type": false,
            "show_vendor": false,
            "show_sku": false,
            "show_barcode": true,
            "barcode_label": "Barcode",
            "metafields": "User manual: custom.user_manual\nSafety instructions: custom.safety_instructions",
            "text": "<p>Additional text can be added before or after this table.</p>",
            "text_position": "after",
            "show_bottom_divider": false
          }
        },
        "reviews": {
          "type": "reviews",
          "settings": {
            "expanded": false,
            "show_count": false
          }
        }
      },
      "block_order": [
        "title",
        "text",
        "price",
        "variants",
        "buy_buttons",
        "request_information",
        "info_box",
        "availability",
        "extra",
        "contact_details",
        "description",
        "details",
        "reviews"
