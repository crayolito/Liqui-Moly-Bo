    "max_blocks": 4,
    "settings": [
      {
        "type": "header",
        "content": "t:sections.all.layout.heading"
      },
      {
        "type": "checkbox",
        "id": "inline",
        "default": false,
        "label": "t:sections.features.settings.inline.label",
        "info": "t:sections.features.settings.inline.info"
      },
      {
        "type": "checkbox",
        "id": "stack_on_mobile",
        "default": true,
        "label": "t:sections.all.layout.stack_on_mobile.label"
      },
      {
        "type": "checkbox",
        "id": "auto_rotate",
        "default": false,
        "label": "t:sections.features.settings.auto_rotate.label",
        "info": "t:sections.features.settings.auto_rotate.info",
        "visible_if": "{{ section.settings.stack_on_mobile == false }}"
      },
      {
        "id": "icon_size",
        "label": "t:sections.features.settings.icon_size.label",
        "type": "select",
        "default": "large",
        "options": [
          {
            "value": "small",
            "label": "t:sections.features.settings.icon_size.options.small"
          },
          {
            "value": "large",
            "label": "t:sections.features.settings.icon_size.options.large"
          }
        ]
      },
      {
        "type": "header",
        "content": "t:sections.all.colors.heading"
      },
      {
        "type": "color_scheme",
        "id": "content_color_scheme",
        "label": "t:sections.all.colors.content_color_scheme.label",
        "default": "background-1",
        "visible_if": "{{ section.settings.inline == false }}"
      },
      {
        "type": "color_scheme",
        "id": "color_scheme",
        "label": "t:sections.all.colors.color_scheme.label",
        "default": "background-2"
      },
      {
        "type": "header",
