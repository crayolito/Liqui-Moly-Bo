            type="email"
            pattern=".+@.+\.(.+\.?)+"
            name="customer[email]"
            id="RegisterForm-email"
            {% if form.email %}
              value="{{ form.email }}"
            {% endif %}
            spellcheck="false"
            autocapitalize="off"
            autocomplete="email"
            aria-required="true"
            required
            {% if form.errors contains 'email' %}
              aria-invalid="true"
              aria-describedby="RegisterForm-email-error"
            {% endif %}
          >

          {%- if form.errors contains 'email' -%}
            <span class="field-error" id="RegisterForm-email-error">
