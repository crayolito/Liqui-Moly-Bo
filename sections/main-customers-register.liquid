        <!-- Checkbox para mostrar campos opcionales -->
        <div class="checkbox-field">
          <input
            type="checkbox"
            id="accept-name-checkbox"
            name="accept_name"
          >
          <label for="accept-name-checkbox"> Acepta proporcionarnos Nombre y Apellido </label>
        </div>

        <!-- Campos opcionales (Nombre y Apellido) -->
        <div class="optional-fields" id="optional-name-fields">
          <div class="field">
            <label for="RegisterForm-FirstName"> {{ 'customer.register.first_name' | t }} (Opcional) </label>
            <input
              type="text"
              name="customer[first_name]"
              id="RegisterForm-FirstName"
              {% if form.first_name %}
                value="{{ form.first_name }}"
              {% endif %}
              autocomplete="given-name"
              class="optional-input"
            >
          </div>

          <div class="field">
            <label for="RegisterForm-LastName"> {{ 'customer.register.last_name' | t }} (Opcional) </label>
            <input
              type="text"
              name="customer[last_name]"
              id="RegisterForm-LastName"
              {% if form.last_name %}
                value="{{ form.last_name }}"
              {% endif %}
              autocomplete="family-name"
              class="optional-input"
            >
          </div>
        </div>

        <!-- Campos ocultos para valores temporales si Shopify los requiere -->
        <input type="hidden" id="temp-first-name" value="">
        <input type="hidden" id="temp-last-name" value="">

        <button type="submit" class="button" id="register-submit-btn">
          {{ 'customer.register.submit' | t }}
          {% render 'angle', direction: 'right' %}
        </button>
      {%- endform -%}
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const checkbox = document.getElementById('accept-name-checkbox');
    const optionalFields = document.getElementById('optional-name-fields');
    const firstNameInput = document.getElementById('RegisterForm-FirstName');
    const lastNameInput = document.getElementById('RegisterForm-LastName');
    const emailInput = document.getElementById('RegisterForm-email');
    const form = document.querySelector('form[action*="account"]');
    const phoneNumberInput = document.getElementById('RegisterForm-phone-number');
    const countryCode = document.getElementById('RegisterForm-country-code');
    const fullPhoneInput = document.getElementById('RegisterForm-phone');

    // Mostrar/ocultar campos de nombre segÃºn checkbox
    checkbox.addEventListener('change', function () {
      if (this.checked) {
        optionalFields.classList.add('show');
      } else {
        optionalFields.classList.remove('show');
        firstNameInput.value = '';
        lastNameInput.value = '';
      }
    });

    // Combinar cÃ³digo de paÃ­s con nÃºmero de telÃ©fono
    function updateFullPhone() {
      const code = countryCode.value;
      const number = phoneNumberInput.value;
      fullPhoneInput.value = code + number;
    }

    phoneNumberInput.addEventListener('input', updateFullPhone);
    countryCode.addEventListener('change', updateFullPhone);

    // Manejar envÃ­o del formulario
    form.addEventListener('submit', function (e) {
      // Si el checkbox NO estÃ¡ marcado, usar el email como identificador
      if (!checkbox.checked) {
        const email = emailInput.value;

        if (email) {
          // Extraer la parte antes del @ del email
          const emailPrefix = email.split('@')[0];
          firstNameInput.value = emailPrefix;
          lastNameInput.value = 'NN'; // NN = Nombre No proporcionado
        }
      }

      // Asegurar que el telÃ©fono completo estÃ© actualizado
      updateFullPhone();

      // Validar que el telÃ©fono tenga contenido
      if (!phoneNumberInput.value.trim()) {
        e.preventDefault();
        alert('Por favor ingrese su nÃºmero de telÃ©fono');
        return false;
      }
    });
  });
</script>
