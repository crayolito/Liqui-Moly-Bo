<script>
  /**
   * SISTEMA DE REGISTRO DE USUARIOS CON TELÃ‰FONO
   * Guarda el telÃ©fono en localStorage para actualizaciÃ³n posterior con GraphQL
   */
  document.addEventListener('DOMContentLoaded', function () {
    // === ELEMENTOS DEL FORMULARIO ===
    const elementos = {
      checkbox: document.getElementById('accept-name-checkbox'),
      camposOpcionales: document.getElementById('optional-name-fields'),
      nombre: document.getElementById('RegisterForm-FirstName'),
      apellido: document.getElementById('RegisterForm-LastName'),
      email: document.getElementById('RegisterForm-email'),
      formulario: document.querySelector('form[action*="account"]'),
      telefono: document.getElementById('RegisterForm-phone-number'),
      codigoPais: document.getElementById('RegisterForm-country-code'),
    };

    // === CONFIGURACIÃ“N ===
    const config = {
      claveStorage: 'telefono_pendiente_actualizacion',
      mensajeValidacion: 'Por favor ingrese su nÃºmero de telÃ©fono',
    };

    // === FUNCIONES AUXILIARES ===

    /**
     * Maneja la visibilidad de los campos opcionales (nombre y apellido)
     */
    function manejarCamposOpcionales() {
      elementos.checkbox.addEventListener('change', function () {
        if (this.checked) {
          elementos.camposOpcionales.classList.add('show');
        } else {
          elementos.camposOpcionales.classList.remove('show');
          elementos.nombre.value = '';
          elementos.apellido.value = '';
        }
      });
    }

    /**
     * Genera datos de identificaciÃ³n cuando no se proporciona nombre
     */
    function generarDatosDeIdentificacion() {
      if (!elementos.checkbox.checked && elementos.email.value) {
        const prefijo = elementos.email.value.split('@')[0];
        elementos.nombre.value = prefijo;
        elementos.apellido.value = 'NN'; // NN = Nombre No proporcionado
      }
    }

    /**
     * Valida que el telÃ©fono estÃ© completo
     */
    function validarTelefono() {
      if (!elementos.telefono.value.trim()) {
        alert(config.mensajeValidacion);
        return false;
      }
      return true;
    }

    /**
     * Guarda los datos del telÃ©fono para actualizaciÃ³n posterior
     */
    function guardarTelefonoParaActualizacion() {
      const telefonoCompleto = elementos.codigoPais.value + elementos.telefono.value;
      const datosRegistro = {
        email: elementos.email.value,
        telefono: telefonoCompleto,
        fechaRegistro: new Date().toISOString(),
      };

      localStorage.setItem(config.claveStorage, JSON.stringify(datosRegistro));

      // Log para debugging
      console.log('ðŸ“± DATOS GUARDADOS PARA ACTUALIZACIÃ“N');
      console.log('Email:', datosRegistro.email);
      console.log('TelÃ©fono:', datosRegistro.telefono);
      console.log('Fecha:', datosRegistro.fechaRegistro);
    }

    // === EVENTOS PRINCIPALES ===

    /**
     * Maneja el envÃ­o del formulario
     */
    function manejarEnvioFormulario() {
      elementos.formulario.addEventListener('submit', function (evento) {
        // Generar datos de identificaciÃ³n si es necesario
        generarDatosDeIdentificacion();

        // Validar telÃ©fono
        if (!validarTelefono()) {
          evento.preventDefault();
          return false;
        }

        // Guardar telÃ©fono para actualizaciÃ³n posterior
        guardarTelefonoParaActualizacion();

        console.log('âœ… Formulario enviado - TelÃ©fono guardado para actualizaciÃ³n');
      });
    }

    // === INICIALIZACIÃ“N ===
    manejarCamposOpcionales();
    manejarEnvioFormulario();

    console.log('ðŸš€ Sistema de registro inicializado correctamente');
  });
</script>
