{{ 'template-customer.css' | asset_url | stylesheet_tag }}

<style>
  .phone-input-wrapper {
    display: flex;
    gap: 10px;
  }

  .country-select {
    width: 120px;
    font-size: 16px;
  }

  .phone-number-input {
    flex: 1;
  }

  .optional-fields {
    display: none;
    opacity: 0;
    max-height: 0;
    overflow: hidden;
    transition: all 0.3s ease;
  }

  .optional-fields.show {
    display: block;
    opacity: 1;
    max-height: 500px;
    margin-top: 15px;
  }

  .checkbox-field {
    display: flex;
    align-items: center;
    gap: 10px;
    margin: 20px 0;
  }

  .checkbox-field input[type='checkbox'] {
    width: auto;
    margin: 0;
  }

  .checkbox-field label {
    margin: 0;
    cursor: pointer;
  }
</style>

<div class="container container-min">
  <div class="block-section">
    <div class="customer register">
      <h1 class="page-title page-title-center">
        {{ 'customer.register.title' | t }}
      </h1>

      {%- form 'create_customer', novalidate: 'novalidate' -%}
        {%- if form.errors -%}
          <div class="form-status form-status-error" tabindex="-1" autofocus>
            <h5 class="form-status-title">
              {{ 'general.form.error_heading' | t }}
            </h5>
            <ul class="form-status-list" role="list">
              {%- for field in form.errors -%}
                <li>
                  {%- if field == 'form' -%}
                    {{ form.errors.messages[field] }}
                  {%- else -%}
                    <a href="#RegisterForm-{{ field }}" class="link">
                      {{ form.errors.translated_fields[field] | capitalize }}
                      {{ form.errors.messages[field] }}
                    </a>
                  {%- endif -%}
                </li>
              {%- endfor -%}
            </ul>
          </div>
        {%- endif -%}

        <!-- Email (Obligatorio) -->
        <div class="field">
          <label for="RegisterForm-email">
            {{ 'customer.register.email' | t }}
            <span style="color: red;">*</span>
          </label>
          <input
            type="email"
            pattern=".+@.+\.(.+\.?)+"
            name="customer[email]"
            id="RegisterForm-email"
            {% if form.email %}
              value="{{ form.email }}"
            {% endif %}
            spellcheck="false"
            autocapitalize="off"
            autocomplete="email"
            aria-required="true"
            required
            {% if form.errors contains 'email' %}
              aria-invalid="true"
              aria-describedby="RegisterForm-email-error"
            {% endif %}
          >

          {%- if form.errors contains 'email' -%}
            <span class="field-error" id="RegisterForm-email-error">
              <span class="form-message">
                {% render 'icons', icon: 'cross' %}
                {{ form.errors.translated_fields.email | capitalize }}
                {{ form.errors.messages.email }}.
              </span>
            </span>
          {%- endif -%}
        </div>

