{% liquid
  assign is_empty = true

  if section.settings.image == blank
    assign is_empty = true
  endif

  if section.settings.collection == blank or section.settings.collection.products.size == 0
    assign is_empty = true
  endif

  assign hide_because_empty = false
  if request.design_mode == false and section.settings.hide_if_empty and is_empty
    assign hide_because_empty = true
  endif
%}
{%- unless hide_because_empty -%}
  {{ 'section-media-with-text.css' | asset_url | stylesheet_tag }}
  {{ 'component-card.css' | asset_url | stylesheet_tag }}
  {{ 'component-price.css' | asset_url | stylesheet_tag }}

  {% liquid
    assign color_scheme_string = section.settings.color_scheme | append: ''
    assign block_section_class = 'block-section'
    unless color_scheme_string == 'background-1'
      assign block_section_class = block_section_class | append: ' block-section-padded'
    endunless
  %}

  <style>
    #shopify-section-{{ section.id }} .block-section {
    	margin-top: {{ section.settings.spacing_top | times: 0.8 | round: 0 }}px;
    	margin-bottom: {{ section.settings.spacing_bottom | times: 0.8 | round: 0 }}px;
    }

    #shopify-section-{{ section.id }} .block-section-padded {
    	margin-top: 0;
    	margin-bottom: 0;
    	padding-top: {{ section.settings.spacing_top | times: 0.8 | round: 0 }}px;
    	padding-bottom: {{ section.settings.spacing_bottom | times: 0.8 | round: 0 }}px;
    }

    @media (min-width: 990px) {
    	#shopify-section-{{ section.id }} .block-section {
    		margin-top: {{ section.settings.spacing_top }}px;
    		margin-bottom: {{ section.settings.spacing_bottom }}px;
    	}

    	#shopify-section-{{ section.id }} .block-section-padded {
    		margin-top: 0;
    		margin-bottom: 0;
    		padding-top: {{ section.settings.spacing_top }}px;
    		padding-bottom: {{ section.settings.spacing_bottom }}px;
    	}
    }

    /* Imagen - ocupa todo el ancho en móvil */
    #shopify-section-{{ section.id }} .media-with-text-media-item {
      width: 100%;
      min-height: 400px;
    }

    #shopify-section-{{ section.id }} .media-with-text-media {
      width: 100%;
      height: 100%;
    }

    #shopify-section-{{ section.id }} .media-with-text-media-item img {
      width: 100%;
      height: 100%;
      object-fit: {% if section.settings.image_full_space %}cover{% else %}contain{% endif %};
      border-radius: var(--border-radius-base);
    }

    /* Proporciones: 45% imagen, 55% productos en desktop */
    @media (min-width: 750px) {
      #shopify-section-{{ section.id }} .media-with-text-media-item {
        width: 45%;
        min-height: 500px;
      }

      #shopify-section-{{ section.id }} .media-with-text-text-item {
        width: 55%;
        padding-left: 4rem;
      }

      #shopify-section-{{ section.id }} .media-with-text-grid-reverse .media-with-text-text-item {
        padding-left: 0;
        padding-right: 4rem;
      }
    }

    @media (min-width: 990px) {
      #shopify-section-{{ section.id }} .media-with-text-media-item {
        min-height: 600px;
      }

      /* Aquí puedes ajustar a 6rem si 4rem te parece poco */
      #shopify-section-{{ section.id }} .media-with-text-text-item {
        padding-left: 4rem;
      }

      #shopify-section-{{ section.id }} .media-with-text-grid-reverse .media-with-text-text-item {
        padding-left: 0;
        padding-right: 4rem;
      }
    }

    /* Control de padding en imagen */
    {% if section.settings.image_full_space %}
    #shopify-section-{{ section.id }} .media-with-text-media {
      padding: 0;
    }
    #shopify-section-{{ section.id }} .media-with-text-media img {
      object-fit: cover !important;
    }
    {% else %}
    #shopify-section-{{ section.id }} .media-with-text-media {
      padding: 2rem;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    {% endif %}

    /* Grid de productos - 2 columnas en móvil */
    #shopify-section-{{ section.id }} .products-grid {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 1.5rem;
      width: 100%;
    }

    /* 2 columnas en tablet, 3 columnas en desktop para 6 productos */
    @media (min-width: 750px) {
      #shopify-section-{{ section.id }} .products-grid {
        grid-template-columns: repeat(2, 1fr);
        gap: 2rem;
      }
    }

    @media (min-width: 990px) {
      #shopify-section-{{ section.id }} .products-grid {
        grid-template-columns: repeat(3, 1fr);
        gap: 1.5rem;
      }
    }

    /* FONDO BLANCO para las tarjetas de productos */
    #shopify-section-{{ section.id }} .card-product {
      background-color: #ffffff !important;
    }

    /* Ocultar vendor (está en card-eyebrow dentro de card-info) */
    #shopify-section-{{ section.id }} .card-product .card-eyebrow,
    #shopify-section-{{ section.id }} .card-product .card-vendor {
      display: none !important;
    }

    /* Ocultar botón de agregar al carrito */
    #shopify-section-{{ section.id }} .card-product .card-product-add-to-cart,
    #shopify-section-{{ section.id }} .card-product .button {
      display: none !important;
    }

    /* Ocultar descripción y rating */
    #shopify-section-{{ section.id }} .card-product-description,
    #shopify-section-{{ section.id }} .card-product .card-rating {
      display: none !important;
    }

    /* Ocultar badge de stock */
    #shopify-section-{{ section.id }} .card-product .badge-stock {
      display: none !important;
    }

    /* Mantener visible los precios */
    #shopify-section-{{ section.id }} .card-product .card-footer {
      display: block !important;
      background-color: #ffffff !important;
    }

    #shopify-section-{{ section.id }} .card-product .card-footer-intro {
      display: none !important;
    }

    #shopify-section-{{ section.id }} .card-product .price {
      display: block !important;
    }

    /* Título del producto más suave */
    #shopify-section-{{ section.id }} .card-product .card-heading {
      font-weight: 400 !important;
      font-size: 1.3rem !important;
    }

    /* Ajustar imagen del producto con fondo blanco */
    #shopify-section-{{ section.id }} .card-product .card-media {
      background-color: #ffffff !important;
    }

    #shopify-section-{{ section.id }} .card-product .card-media img {
      object-fit: contain;
      object-position: center;
    }

    /* Card info también con fondo blanco */
    #shopify-section-{{ section.id }} .card-product .card-info {
      background-color: #ffffff !important;
    }
  </style>

  {%- capture visibility_classes -%}{%- render 'section-visibility-classes' -%}{%- endcapture -%}
  {%- assign visibility_classes = visibility_classes | strip -%}
  {%- assign image_sizes = '(min-width: 990px) 40vw, (min-width: 750px) 40vw, 100vw' -%}
  {%- assign image_widths = '400, 600, 800, 1000, 1200' -%}

  <div class="{{ visibility_classes }}">
    <div class="color-{{ section.settings.color_scheme }}">
      <div class="container">
        <div class="{{ block_section_class }}">
          <div class="media-with-text color-{{ section.settings.content_color_scheme }}">
            <div class="media-with-text-grid {% if section.settings.layout == 'text_first' %} media-with-text-grid-reverse{% endif %}">
              <!-- Imagen -->
              <div class="media-with-text-media-item">
                <div class="media-with-text-media">
                  {%- if section.settings.image != blank -%}
                    {{
                      section.settings.image
                      | image_url: width: 1200
                      | image_tag: widths: image_widths, sizes: image_sizes, loading: 'lazy'
                    }}
                  {%- else -%}
                    {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                  {%- endif -%}
                </div>
              </div>

              <!-- Productos -->
              <div class="media-with-text-text-item">
                <div class="products-grid">
                  {% if section.settings.collection != blank %}
                    {% for product in section.settings.collection.products limit: 6 %}
                      {% liquid
                        assign lazyload = false
                        if forloop.index > 2
                          assign lazyload = true
                        endif
                      %}
                      {% render 'card-product',
                        card_product: product,
                        show_vendor: false,
                        show_stock: false,
                        show_rating: false,
                        show_add_to_cart: false,
                        mobile_two_columns: true,
                        event_context: 'MediaWithTextProducts',
                        lazyload: lazyload
                      %}
                    {% endfor %}
                  {% else %}
                    {% comment %} Placeholders si no hay colección {% endcomment %}
                    {% for i in (1..6) %}
                      {% render 'card-product',
                        card_product: null,
                        show_vendor: false,
                        show_stock: false,
                        show_rating: false,
                        show_add_to_cart: false,
                        mobile_two_columns: true,
                        event_context: 'MediaWithTextProducts'
                      %}
                    {% endfor %}
                  {% endif %}
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
{%- endunless -%}
{% schema %}
{
  "name": "Media con Productos",
  "tag": "section",
  "class": "section section-media-with-text",
  "disabled_on": {
    "groups": ["header", "footer", "custom.overlays"]
  },
  "settings": [
    {
      "type": "header",
      "content": "Imagen"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Imagen",
      "info": "Imagen que se mostrará al lado de los productos"
    },
    {
      "type": "checkbox",
      "id": "image_full_space",
      "label": "Imagen ocupa todo el espacio",
      "info": "Si está activado, la imagen cubrirá todo el espacio sin padding (cover). Si está desactivado, la imagen se mostrará completa con padding (contain)",
      "default": false
    },
    {
      "type": "header",
      "content": "Colección de Productos"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Colección",
      "info": "Selecciona la colección. Se mostrarán máximo 6 productos"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "select",
      "id": "layout",
      "label": "Diseño",
      "default": "media_first",
      "info": "Posición de la imagen (40% imagen, 60% productos)",
      "options": [
        {
          "value": "media_first",
          "label": "Imagen primero (izquierda)"
        },
        {
          "value": "text_first",
          "label": "Productos primero (izquierda)"
        }
      ]
    },
    {
      "type": "header",
      "content": "Colores"
    },
    {
      "type": "color_scheme",
      "id": "content_color_scheme",
      "label": "Esquema de color del contenido",
      "default": "background-1"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Esquema de color de fondo",
      "default": "background-1"
    },
    {
      "type": "header",
      "content": "Espaciado"
    },
    {
      "type": "range",
      "id": "spacing_top",
      "min": 0,
      "max": 150,
      "step": 2,
      "default": 60,
      "label": "Espaciado superior"
    },
    {
      "type": "range",
      "id": "spacing_bottom",
      "min": 0,
      "max": 150,
      "step": 2,
      "default": 60,
      "label": "Espaciado inferior"
    },
    {
      "type": "header",
      "content": "Visibilidad"
    },
    {
      "type": "checkbox",
      "id": "show_on_desktop",
      "default": true,
      "label": "Mostrar en escritorio"
    },
    {
      "type": "checkbox",
      "id": "show_on_mobile",
      "default": true,
      "label": "Mostrar en móvil"
    },
    {
      "type": "checkbox",
      "id": "hide_if_empty",
      "default": false,
      "label": "Ocultar si está vacío",
      "info": "Oculta la sección si no hay imagen ni productos"
    }
  ],
  "presets": [
    {
      "name": "Media con Productos"
    }
  ]
}
{% endschema %}
