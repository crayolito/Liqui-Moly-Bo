          },
          {
            "type": "url",
            "id": "button_2_link",
            "label": "t:sections.before_after_slider.blocks.buttons.settings.button_2_link.label"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "t:sections.before_after_slider.presets.name",
        "category": "t:sections.all.preset_category.banners",
        "blocks": [
          {
            "type": "heading"
          },
          {
            "type": "text"
          },
          {
            "type": "buttons"
          }
        ]
      }
    ]
  }
