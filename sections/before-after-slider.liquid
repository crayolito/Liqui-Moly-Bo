      {
        "type": "select",
        "id": "layout",
        "label": "t:sections.before_after_slider.settings.layout.label",
        "default": "media_first",
        "info": "t:sections.before_after_slider.settings.layout.info",
        "options": [
          {
            "value": "media_first",
            "label": "t:sections.before_after_slider.settings.layout.options.label_1"
