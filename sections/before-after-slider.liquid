          {
            "value": "text_first",
            "label": "t:sections.before_after_slider.settings.layout.options.label_2"
          }
        ]
      },
      {
        "type": "text_alignment",
        "id": "desktop_content_alignment",
        "label": "t:sections.before_after_slider.settings.desktop_content_alignment.label",
        "default": "left"
      },
      {
        "type": "header",
        "content": "t:sections.all.colors.heading"
      },
      {
        "type": "color",
        "id": "colors_slider",
        "label": "t:sections.before_after_slider.settings.colors_slider.label",
        "default": "#FFFFFF"
      },
      {
        "type": "color",
        "id": "colors_slider_arrow",
        "label": "t:sections.before_after_slider.settings.colors_slider_arrow.label",
        "default": "#000000"
      },
      {
        "type": "color_scheme",
        "id": "content_color_scheme",
        "label": "t:sections.all.colors.content_color_scheme.label",
        "default": "background-1"
      },
      {
        "type": "color_scheme",
        "id": "color_scheme",
        "label": "t:sections.all.colors.color_scheme.label",
        "default": "background-1"
      },
      {
        "type": "header",
        "content": "t:sections.all.section_spacing.heading"
