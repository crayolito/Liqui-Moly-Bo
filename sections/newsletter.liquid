{{ 'section-footer.css' | asset_url | stylesheet_tag }}

{% if settings.button_top_enabled %}
  <script src="{{ 'button-top.js' | asset_url }}" defer="defer"></script>
  <link
    rel="stylesheet"
    href="{{ 'component-button-top.css' | asset_url }}"
    media="print"
    onload="this.media='all'"
  >
{% endif %}

{% if section.settings.background_image %}
  <style>
    /* Imagen de fondo en TODO el footer */
    .section-footer {
      position: relative;
      background-image: url('{{ section.settings.background_image | image_url: width: 1920 }}');
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
      overflow: hidden;
    }

    /* Overlay negro en los extremos */
    .section-footer::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: linear-gradient(
        90deg,
        rgba(0, 0, 0, {{ section.settings.background_overlay_opacity | default: 50 | times: 0.01 }}) 0%,
        rgba(0, 0, 0, 0) 20%,
        rgba(0, 0, 0, 0) 80%,
        rgba(0, 0, 0, {{ section.settings.background_overlay_opacity | default: 50 | times: 0.01 }}) 100%
      );
      pointer-events: none;
      z-index: 1;
    }

    /* Asegurar que todo el contenido esté encima del overlay */
    .section-footer > * {
      position: relative;
      z-index: 2;
    }

    /* IMPORTANTE: Hacer transparentes los fondos internos para que se vea la imagen */
    .section-footer .color-{{ section.settings.color_scheme }},
    .section-footer .footer-pre-info-wrapper,
    .section-footer .footer-info-wrapper {
      background-color: transparent !important;
    }

    /* Mantener bordes visibles */
    .section-footer .footer-info {
      border-top-color: rgba(255, 255, 255, 0.2);
    }
  </style>
{% endif %}

<style>
  .footer-social-links-wrap .list-social-link svg {
    width: {{ section.settings.social_icons_size | default: 32 }}px;
    height: {{ section.settings.social_icons_size | default: 32 }}px;
    transition: transform 0.3s ease;
  }

  .footer-social-links-wrap .list-social-link:hover svg {
    transform: scale(1.15);
  }
</style>

{% if section.blocks %}
  <div class="color-{{ section.settings.color_scheme }} ">
    <div class="container">
      <div class="footer-blocks-wrapper grid grid-1-col grid-{{ section.blocks.size }}-col-tablet">
        {% for block in section.blocks %}
          <div class="grid-item" {{ block.shopify_attributes }}>
            {% if block.settings.title != blank %}
              <h3 class="widget-title">{{ block.settings.title | escape }}</h3>
            {% endif %}

            {%- case block.type -%}
              {% when 'menu' %}
                {%- if block.settings.menu != blank -%}
                  <ul class="list-unstyled">
                    {%- for link in block.settings.menu.links -%}
                      <li>
                        <a
                          href="{{ link.url }}"
                          class="link-text {% if link.current %} current {% endif %}"
                          {% if link.current %}
                            aria-current="page"
                          {% endif %}
                        >
                          {{ link.title | escape }}
                        </a>
                      </li>
                    {% endfor %}
                  </ul>
                {% endif %}
              {% when 'text' %}
                {% if block.settings.image != blank %}
                  {%- assign image_size = block.settings.image_width -%}
                  {%- assign image_size2 = block.settings.image_width | times: 2 -%}
                  <style>
                    .widget-media-{{ block.id }} { max-width: {{ block.settings.image_width }}px; }
                  </style>
                  <figure class="widget-media widget-media-{{ block.id }}">
                    {% if block.settings.link %}
                      <a href="{{ block.settings.link }}">
                    {% endif %}
                    <img
                      src="{{ block.settings.image | image_url: width: image_size }}"
                      alt="{{ block.settings.image.alt | escape }}"
                      width="{{ block.settings.image.width }}"
                      height="{{ block.settings.image.height }}"
                      srcset="{{ block.settings.image | image_url: width: image_size }} 1x, {{ block.settings.image | image_url: width: image_size2 }} 2x"
                      loading="lazy"
                    >
                    {% if block.settings.link %}
                      </a>
                    {% endif %}
                  </figure>
                {% endif %}

                {% if block.settings.text != blank %}
                  <div class="rte">
                    {{ block.settings.text }}
                  </div>
                {% endif %}

              {%- when 'custom_liquid' -%}
                <div {{ block.shopify_attributes }}>
                  {{ block.settings.custom_liquid }}
                </div>

              {% when 'newsletter' %}
                <div class="footer-newsletter-block" {{ block.shopify_attributes }}>
                  <div class="footer-newsletter-content">
                    {% if block.settings.title != blank %}
                      <h3 class="footer-newsletter-title h4">
                        {{ block.settings.title | escape }}
                      </h3>
                    {% endif %}

                    {% if block.settings.text != blank %}
                      <p class="footer-newsletter-text">
                        {{ block.settings.text | escape }}
                      </p>
                    {% endif %}
                  </div>

                  {% form 'customer', class: 'footer-newsletter-form' %}
                    <input type="hidden" name="contact[tags]" value="newsletter">

                    <div class="footer-newsletter-input-wrap">
                      <label for="footer-newsletter-email-{{ block.id }}" class="visually-hidden">
                        {{ 'sections.newsletter.email' | t }}
                      </label>

                      <input
                        type="email"
                        name="contact[email]"
                        id="footer-newsletter-email-{{ block.id }}"
                        placeholder="{{ 'sections.newsletter.email' | t }}"
                        autocomplete="email"
                        required
                      >

                      <button
                        type="submit"
                        class="button button-newsletter"
                        aria-label="{{ 'sections.newsletter.submit' | t }}"
                      >
                        <svg
                          xmlns="http://www.w3.org/2000/svg"
                          width="20"
                          height="20"
                          viewBox="0 0 24 24"
                          fill="none"
                          stroke="currentColor"
                          stroke-width="2"
                          stroke-linecap="round"
                          stroke-linejoin="round"
                        >
                          <line x1="22" y1="2" x2="11" y2="13"></line>
                          <polygon points="22 2 15 22 11 13 2 9 22 2"></polygon>
                        </svg>
                      </button>
                    </div>

                    {% if form.posted_successfully? %}
                      <div class="form-status form-status-success">
                        <span>{{ 'sections.newsletter.success' | t }}</span>
                      </div>
                    {% endif %}
                  {% endform %}
                </div>
            {% endcase %}
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
{% endif %}

{% liquid
  assign show_pre_info = false
  if section.settings.show_social
    assign show_pre_info = true
  endif

  if section.settings.enable_language_selector and localization.available_languages.size > 1
    assign show_pre_info = true
  endif
  if section.settings.enable_country_selector and localization.available_countries.size > 1
    assign show_pre_info = true
  endif

  assign should_center = false
  unless section.settings.show_social
    assign should_center = true
  endunless

  unless section.settings.enable_language_selector or section.settings.enable_country_selector
    assign should_center = true
  endunless
%}

{%- if show_pre_info -%}
  <div class="footer-pre-info-wrapper color-{{ section.settings.color_scheme }}">
    <div class="container">
      <div class="footer-pre-info-content{% if should_center %} footer-pre-info-content-centered{% endif %}">
        {% if section.settings.show_social %}
          <div class="footer-social-links-wrap">
            {% render 'social-media-icons' %}
          </div>
        {% endif %}

        <div class="footer-lang-region">
          {%- if section.settings.enable_language_selector and localization.available_languages.size > 1 -%}
            <div>
              {%- render 'dropdown-language', classname: 'dropdown-right dropdown-up', id: 'Footer' -%}
            </div>
          {%- endif -%}

          {%- if section.settings.enable_country_selector and localization.available_countries.size > 1 -%}
            <div>
              {%- render 'dropdown-region', classname: 'dropdown-right dropdown-up', id: 'Footer' -%}
            </div>
          {%- endif -%}
        </div>
      </div>
    </div>
  </div>
{%- endif -%}

<div class="footer-info-wrapper color-{{ section.settings.color_scheme }}">
  <div class="container">
    <div class="footer-info">
      <div class="footer-info-start">
        &copy; {{ 'now' | date: '%Y' }}, {{ shop.name | link_to: routes.root_url }} -
        {{ powered_by_link }}
      </div>

      {%- if section.settings.payment_enable -%}
        <div class="footer-info-end">
          <span class="visually-hidden">{{ 'sections.footer.payment' | t }}</span>
          <ul class="list-inline-menu list-payment" role="list">
            {%- for type in shop.enabled_payment_types -%}
              <li class="list-payment-item">
                {{ type | payment_type_svg_tag: class: 'icon' }}
              </li>
            {%- endfor -%}
          </ul>

          {%- if shop.features.follow_on_shop? and section.settings.enable_follow_on_shop -%}
            <div class="footer-follow-on-shop">
              {{ shop | login_button: action: 'follow' }}
            </div>
          {%- endif -%}
        </div>
      {%- endif -%}
    </div>
  </div>
</div>

{% if settings.button_top_enabled %}
  <button-top>
    <button
      id="ButtonBackToTop"
      type="button"
      class="button-top color-background-1"
      aria-label="{{ 'general.button_top' | t }}"
    >
      {% render 'icons', icon: 'arrow-up' %}
      <span class="visually-hidden">{{ 'general.button_top' | t }}</span>
    </button>
  </button-top>
{% endif %}

