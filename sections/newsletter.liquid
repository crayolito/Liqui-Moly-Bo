        },
        {
          "type": "range",
          "id": "image_width",
          "min": 50,
          "max": 340,
          "step": 10,
          "default": 340,
          "unit": "px",
          "label": "t:sections.footer.blocks.text.settings.image_width.label"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "t:sections.footer.blocks.text.settings.text.label",
